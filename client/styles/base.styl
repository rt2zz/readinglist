a
  text-decoration:none

.topnav
  width: 100%
  height: 60px
  background-color: #BCC6CC
  margin: 0
  font-family: 'Lato'
  font-size: 24px

  a
    color: black

  li 
    display: inline-block
    margin: 20px 20px

    ul
      display: none
      position: absolute
      background-color: #BCC6CC
      padding: 0

      li
        display: block
        margin: 0 0

  li:hover ul
    visibility: visible  
    display: block

