.nav.dev a
  padding:5px
  color: #585

a
  text-decoration:none

.topnav
  width: 100%
  height: 60px
  background-color: #BCC6CC
  margin: 0
  padding: 0
  font-family: 'Lato'
  font-size: 24px

  a
    color: black

  li 
    display: inline-block
    margin: 20px 20px

    ul
      display: none
      position: absolute
      background-color: #BCC6CC
      padding: 0

      li
        display: block
        margin: 0 0

  li:hover ul
    visibility: visible  
    display: block

body 
  margin: 0 0
  background-color: #F5F5F5

body.down
  margin-top:100px

.content
  width: 40%
  margin: 0 10%
  letter-spacing: 2px
  font-size: 20px
  font-family: 'Lato'
  font-weight: 300
  line-height: 150%

.topnav.fixed
  position: fixed
  top: 0

.drawer
  margin-left: 20px

.drawerwrapper
  height: 100%
  position: fixed
  right: 0
  top: 0
  z-index: 100
  width: 100px
  background-color: #E1E1E1
  transition-duration: .3s

.drawerwrapper.closed:hover
  background-color: rgba(#FFFFFF, 1)

  .border
    background-color: rgba(#000000, .30)

.border
  height: 100%
  background-color: black
  float:left
  width: 20px
  transition-duration: .3s

body .icon-double-angle-left
  font-size: 120px
  position: absolute
  top: 50%
  margin-top: -75px
  color: rgba(#000000, .15)

body .icon-double-angle-right
  color: white
  font-size: 26px
  top: 50%
  position: absolute
  margin-top: -22px
  padding: 0 2px
  display: none

.closed 
  
  .item
    display: none
    
.item
  height: 80px
  //width: 100%
  border-bottom: 2px dashed black
  line-height: 2px
  padding: 0 5px

.title 
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 15px

.date
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 13px

.description
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 10px
  line-height: 10px

#right
  overflow-x: hidden

.friend
  height:100px
  border-bottom: 1px solid #ddd

  h2 
    display:inline-block
  p
    display:inline-block
  img
    display:inline-block

  &.selected
    background:#cfd






  

