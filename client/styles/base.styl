.nav.dev a
  padding:5px
  color: #585

a
  text-decoration:none

.topnav
  width: 100%
  height: 100px
  background-color: red
  margin: 0
  -webkit-transition-duration:1.0s 
  -moz-transition-duration:1.0s 
  -o-transition-duration:1.0s 
  transition-duration:1.0s 

  li 
    display: inline-block
    margin: 0 10px

    ul
      margin: 0 10px
      visibility: hidden
      position: absolute

      li
        display: block

  li:hover ul
    visibility: visible  

body 
  margin: 0 0

.content
  width: 50%
  margin: 0 10%
  letter-spacing: 1px
  font-size: 18px

.topnav.fixed
  position: fixed
  top: 0
  -webkit-transition-duration:1.0s 
  -moz-transition-duration:1.0s 
  -o-transition-duration:1.0s 
  transition-duration:1.0s 



