.nav.dev a
  padding:5px
  color: #585

a
  text-decoration:none

.topnav
  width: 100%
  height: 100px
  background-color: #BCC6CC
  margin: 0

  li 
    display: inline-block
    margin: 0 10px

    ul
      margin: 0 10px
      visibility: hidden
      position: absolute

      li
        display: block

  li:hover ul
    visibility: visible  

body 
  margin: 0 0
  background-color: #E4EEF4

body.down
  margin-top:100px

.content
  width: 50%
  margin: 0 10%
  letter-spacing: 2px
  font-size: 18px
  font-family: 'Lato'
  font-weight: 400
  line-height: 150%

.topnav.fixed
  position: fixed
  top: 0



