a
  text-decoration:none

.topnav
  width: 100%
  height: 40px
  background-color: #0B486B
  margin: 0 0 40px 0
  padding: 0
  font-family: 'Lato'
  font-size: 24px
  border-bottom: 2px solid black
  display: inline-block
  float: left
  color: #79BD9A

  a
    color: #79BD9A
    font-weight: 300
    padding: 0 30px
    font-size: 22px

  li 
    display: inline-block

    ul
      display: none
      position: absolute
      padding: 0

      li
        display: block
        margin: 0 0

  li:hover ul
    visibility: visible  
    display: block

body 
  margin: 0 0
  background: linear-gradient(to bottom, #f2fbe6 0%,#ffffff 70%) /* W3C */
  text-align: center

body.down
  margin-top:0

.content
  width: 40%
  margin: 0 10%
  letter-spacing: 2px
  font-size: 20px
  font-family: 'Lato'
  font-weight: 300
  line-height: 150%

.topnav.fixed
  position: fixed
  top: 0

.drawer
  margin-left: 20px

.drawerwrapper
  height: 100%
  position: fixed
  right: 0
  top: 0
  z-index: 100
  width: 100px
  background-color: #E1E1E1
  transition-duration: .3s

.drawerwrapper.closed:hover
  background-color: rgba(#FFFFFF, 1)
  cursor: pointer

  .border
    background-color: rgba(#000000, .30)

.border
  height: 100%
  background-color: #484848
  float:left
  width: 20px
  transition-duration: .3s
  cursor: pointer

.border:hover
  color: #FFFFFF

body .icon-double-angle-left
  font-size: 120px
  position: absolute
  top: 50%
  margin-top: -75px
  color: rgba(#000000, .15)

body .icon-double-angle-right
  color: white
  font-size: 26px
  top: 50%
  position: absolute
  margin-top: -22px
  padding: 0 3px
  display: none

.closed 
  
  .item
    display: none
    
