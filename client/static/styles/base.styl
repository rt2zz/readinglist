body
  width: 100%

.nav.dev a
  padding:5px
  color: #585

.tophead
  width: 100%
  position: fixed
  top: 0

.background
  background-image: url('/asset/images/geometry12.jpg')
  opacity: .5
  width: 100%
  height: 400px
  position: fixed
  z-index: -50
  top: 0

a
  text-decoration:none

.topnav
  width: 100%
  height: 40px
  background-color: black
  margin: 0 0 40px 0
  padding: 0
  font-family: 'Titillium Web'
  font-size: 24px
  border-bottom: 2px solid black
  color: black
  text-align:left
  position:absolute

  a
    color: #79BD9A
    font-weight: 300
    padding: 0 30px
    font-size: 14px
    margin: 10px auto
    transition-duration: .3s

    &:hover, &.active
      color: white

  li 
    display: inline-block

    ul
      display: none
      position: absolute
      padding: 0

      li
        display: block
        margin: 0 0

  li:hover ul
    visibility: visible  
    display: block
  
.bigwrap
  margin: 0px 0px
  background: linear-gradient(to bottom, #f2fbe6 0%,#ffffff 70%) /* W3C */
  text-align: center
  width: 100%
  height: 900px
  position: absolute
  margin-top: 350px
  box-shadow: -2px -2px 100px rgba(#000000, .3)

body.down
  margin-top:0

.content
  width: 40%
  margin: 0 10%
  letter-spacing: 0px
  font-size: 14px
  font-family: 'Roboto'
  font-weight: normal
  line-height: 150%
  padding-top: 40px

.topnav.fixed
  position: fixed
  top: 0

.drawer
  margin-left: 20px

.drawerwrapper
  height: 100%
  position: fixed
  right: 0
  top: 0
  z-index: 100
  width: 100px
  background-color: #E1E1E1
  transition-duration: .3s

.drawerwrapper.closed:hover
  background-color: rgba(#FFFFFF, 1)
  cursor: pointer

  .border
    background-color: rgba(#000000, .30)

.border
  height: 100%
  background-color: #484848
  float:left
  width: 20px
  transition-duration: .3s
  cursor: pointer

.border:hover
  color: #FFFFFF

body .icon-double-angle-left
  font-size: 120px
  position: absolute
  top: 50%
  margin-top: -75px
  color: rgba(#000000, .15)

body .icon-double-angle-right
  color: white
  font-size: 26px
  top: 50%
  position: absolute
  margin-top: -22px
  padding: 0 3px
  display: none

.closed 
  
  .item
    display: none
    
.item
  height: 80px
  //width: 100%
  border-bottom: 2px dashed black
  line-height: 2px
  padding: 0 5px
  width: 366px

.title 
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 15px

.date
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 13px

.description
  font-family: 'Roboto'
  letter-spacing: 1px
  font-size: 10px
  line-height: 10px

#right
  overflow-x: hidden

.friend
  height:100px
  border-bottom: 1px solid #ddd
  user-select: none
  cursor: pointer

  h2 
    display:inline-block
  p
    display:inline-block
  img
    display:inline-block

  &.selected
    background:#cfd
    
.content

  h1
    font-size: 45px
    font-weight: 700
    letter-spacing: 1px
    margin: 30px auto
    line-height: 120%

  h2
    font-size: 35px
